/* pages/writeWords_content/writeWords_content.wxss */
page {
  background-color: white;
}
page .color_green {
  color: #23b26d;
}
page .color_grey {
  color: #97a5aa;
}
page .bg_color_blue {
  background-color: #4257b2;
}
page .bg_color_small_blue {
  background-color: #a0abd9;
}
page .shadow_normol {
  box-shadow: 0 0 10rpx #efefef;
}
page .shadow_large {
  box-shadow: 15px 0 15px -15px #dedede, -15px 0 15px -15px #dedede;
}
page .border_normol {
  border-bottom: solid 13rpx #97a5aa;
}
page .border_green {
  border-bottom: solid 13rpx #23b26d;
}
.page_index .page_bgImg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  filter: opacity(15%);
}
.page_index .word_interpretation {
  margin-top: 180rpx;
  width: 92%;
  margin-left: 4%;
  font-size: 50rpx;
}
.page_index .writeWord_input {
  width: 94%;
  margin-left: 3%;
  margin-top: 210rpx;
}
.page_index .writeWord_input .writeWord_input_context {
  background-color: transparent;
}
.page_index .writeWord_input .custom-icon {
  color: #1989fa;
}
